[alias]
        a = add
        aa = add --all :/
        alias = config --get-regexp ^alias\\.
        b = branch
        ci = commit
        co = checkout
        d = diff --ignore-space-change
        l = log --pretty=format:\"%C(green)%h%C(reset) %C(blue)%ad%C(reset) %s%C(yellow)%d%C(reset) %C(blue)[%an]%C(reset)\" --graph --date=short
        s = status
        r = remote
[color]
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = atom --wait
[push]
        default = simple
[user]
        name = Betty Lam
        email = [replace email]
[merge]
        tool = extMerge
[mergetool "extMerge"]
        cmd = extMerge "$BASE" $LOCAL" $REMOTE" "$MERGED"
        trustExitCode = false
        // install p4merge for this
[diff]
        external = extDiff
